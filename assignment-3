# TASK 1

import math  # Task 2
n = int(input('Enter a number: '))


def factorial(n):
    if n < 2:
        return 1
    else:
        return n * factorial(n - 1)


result = factorial(n)
# This tells Python it's an f-string, so it should evaluate expressions inside {}.
print(f"Factorial of number {n} : {result}")


# TASK 2

num = float(input('Enter a number: '))

print(f'Square root: {math.sqrt(num)}')
print(f'logarithm: {math.log(num)}')
print(f'sine: {math.sin(num)}')
